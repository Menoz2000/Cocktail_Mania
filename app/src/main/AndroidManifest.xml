<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocktailmania">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CocktailMania">
        <activity
            android:name=".book.StepMyCocktail"
            android:exported="true" />
        <activity android:name=".cocktail.StrumActivity" />
        <activity android:name=".book.MyCocktail" />
        <activity android:name=".naviga.start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".cocktail.CocktailModule" />
        <activity android:name=".ingredient.IngredientModule" />
        <activity android:name=".book.BookActivity" />
        <activity android:name=".cocktail.CocktailActivity" />
        <activity android:name=".ingredient.IngredientActivity" />
        <activity android:name=".naviga.MainActivity" />
        <activity android:name=".naviga.TypeCocktailList" />
    </application>

</manifest>
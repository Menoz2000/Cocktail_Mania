<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/step_custom_shape"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/AzioneImg"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="ImmagineCocktail"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/ActionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prova"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/IngList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prova"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/StepNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prova"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/textStrum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_weight="1"

        android:text="@string/prova" />

</LinearLayout>